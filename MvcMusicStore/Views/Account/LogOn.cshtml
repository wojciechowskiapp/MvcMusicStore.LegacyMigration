@model MvcMusicStore.Models.LogOnModel

@{
    ViewBag.Title = "Log On";
}

<h2>Log On</h2>
<p>
    Please enter your user name and password. <a asp-action="Register">Register</a> if you don't have an account.
</p>

<script src="~/js/jquery.validate.min.js" type="text/javascript"></script>
<script src="~/js/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>

<div asp-validation-summary="ModelOnly">Login was unsuccessful. Please correct the errors and try again.</div>

<form method="post">
    <div>
        <fieldset>
            <legend>Account Information</legend>

            <div class="editor-label">
                <label asp-for="UserName"></label>
            </div>
            <div class="editor-field">
                <input asp-for="UserName" />
                <span asp-validation-for="UserName"></span>
            </div>

            <div class="editor-label">
                <label asp-for="Password"></label>
            </div>
            <div class="editor-field">
                <input asp-for="Password" type="password" />
                <span asp-validation-for="Password"></span>
            </div>

            <div class="editor-label">
                <input asp-for="RememberMe" />
                <label asp-for="RememberMe"></label>
            </div>

            <p>
                <input type="submit" value="Log On" />
            </p>
        </fieldset>
    </div>
</form>
